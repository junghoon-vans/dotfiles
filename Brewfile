# Brewfile - Homebrew package manager configuration
# Usage: brew bundle install

# ========================================
# Programming Languages & Tools
# ========================================

# Go programming language
brew "go"

# ========================================
# Development Tools
# ========================================

# Modern text editor
brew "neovim"

# Version control
brew "git"
brew "gh"              # GitHub CLI
brew "lazygit"         # Terminal UI for git

# Go development tools
brew "golangci-lint"   # Go linter
brew "delve"           # Go debugger
brew "go-task"         # Task runner

# Container management
cask "orbstack"        # Fast Docker Desktop alternative

# ========================================
# Modern CLI Tools (Unix replacements)
# ========================================

# Better cat with syntax highlighting
brew "bat"

# Better ls with colors and icons
brew "eza"

# Better grep (fast search)
brew "ripgrep"

# Better find
brew "fd"

# Better top
brew "htop"

# JSON processor
brew "jq"

# Simplified man pages
brew "tldr"

# Fuzzy finder
brew "fzf"

# Smart directory navigation
brew "autojump"

# ========================================
# Fonts (for terminal icons)
# ========================================

cask "font-fira-code-nerd-font"
